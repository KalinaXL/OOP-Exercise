<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_style"
    >
    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:text="Trạng thái"
        android:textDirection="anyRtl"
        />
    <RelativeLayout
        android:layout_toRightOf="@id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/blockTime"
        >
    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:textSize="17dp"
    />
    <View
        android:layout_below="@id/startTime"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="#000"
    />
    <TextView
        android:id="@+id/endTime"
        android:layout_below="@id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        android:textSize="17dp"
    />
        </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/block2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blockTime"
        android:layout_marginLeft="22dp"
        android:paddingRight="20dp"
        >
         <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon hoc"
        android:textSize="20dp"
    />
        <TextView
        android:id="@+id/roomName"
        android:layout_below="@id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phong hoc"
        android:textSize="17dp"
    />
     </RelativeLayout>

</RelativeLayout>

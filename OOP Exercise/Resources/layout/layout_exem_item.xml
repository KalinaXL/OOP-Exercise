<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app    ="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    >
 
    <TextView
        android:id="@+id/txtExDate"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="#5A5259"
    />
      <TextView
        android:id="@+id/txtExMonth"
        android:layout_below="@id/txtExDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginLeft="15dp"
        android:textColor="#5A5259"
    />
    
    <android.support.v7.widget.CardView
        android:layout_toRightOf="@id/txtExDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
    
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:paddingTop="1dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:id="@+id/txtExTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingTop="6dp"
                android:textColor="#4A70E4"
            />
             <TextView
                android:id="@+id/txtExSubjectName"
                android:layout_toRightOf="@id/txtExTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
          
            />
            <ImageView
                android:id="@+id/imgExLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExSubjectName"
                android:layout_toRightOf="@id/txtExTime"
                android:layout_marginLeft="17dp"
                android:background="@drawable/outline_room_black_18dp"
            />
            <TextView
                android:id="@+id/txtExRoom"
                android:layout_below="@id/txtExSubjectName"
                android:layout_toRightOf="@id/imgExLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                
            />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>